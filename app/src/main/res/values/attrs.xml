<resources>

    <declare-styleable name="RailwayLine">
        <attr name="color" format="color"/>
        <attr name="thickness" format="dimension" />
        <attr name="direction" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
            <enum name="top_left_curve" value="2" />
            <enum name="top_right_curve" value="3" />
            <enum name="bottom_left_curve" value="4" />
            <enum name="bottom_right_curve" value="5" />
        </attr>
    </declare-styleable>

</resources>
